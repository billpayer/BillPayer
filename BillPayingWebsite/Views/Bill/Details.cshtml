@model BillPayerCore.DataModels.Bill
@{
    ViewBag.Title = "Bill";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="col-md-3">Bill Id:</div>
    <div class="col-md-6">@Model.Id</div>

</div>

<div class="row">
    <div class="col-md-3">Name:</div>

    <div class="col-md-6">@Model.Name</div>


</div>

<div class="row">
    <div class="col-md-3">Date Due:</div>

    <div class="col-md-6">@Model.DateDue</div>

</div>

<div class="row">
    <div class="col-md-3">Cost</div>

    <div class="col-md-6">@Model.Cost</div>

</div>

<div class="row">
    <div class="col-md-3">Recurring:</div>
    <div class="col-md-6">@Model.Recurring</div>

</div>

<div class="row">
    <div class="col-md-3">Paid:</div>
    <div class="col-md-6">@Model.Paid</div>

</div>

<div class="row">
    <div class="col-md-3">Splits:</div>

</div>

@foreach (var split in Model.Splits)
{
    <div class="row">
        <div class="col-md-3">Splits:</div>
        <div class="col-md-6"> @split.Id </div>
        <div class="col-md-6"> @split.PortionCost </div>
        <div class="col-md-6"> @split.User </div>
    </div>


}

<div class="row">
    <div class="col-md-3">@Html.ActionLink("Split Bill", "SplitBill", new { controller = "Bill", id = Model.Id, billId = Model.Id }, new { @class = "btn btn-primary" })</div>

</div>
