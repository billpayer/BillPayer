
@model BillPayingWebsite.Models.BillViewModel
@{
    ViewBag.Title = "Bill";
}
<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm("Create", "Bill", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    <h4>Create a new Bill.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Bill.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Bill.Name, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">

        @Html.LabelFor(m => m.Bill.DateDue, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Bill.DateDue, new { @class = "form-control" })
        </div>
    </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Bill.Cost, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Bill.Cost, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.HouseHold.Roommates, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @foreach (var roommate in Model.HouseHold.Roommates)
                {


                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RoommatesSelected[roommate.Id])
                        @Html.Label(@roommate.FirstName + " " + @roommate.LastName)

                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Options", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.Bill.Recurring)
                    @Html.LabelFor(m => m.Bill.Recurring)

                </div>
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.Bill.Paid)
                    @Html.LabelFor(m => m.Bill.Paid)

                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Add Bill" />
            </div>
        </div>

                   
}
