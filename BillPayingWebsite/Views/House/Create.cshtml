@model BillPayerCore.DataModels.HouseHold
@{
    
    ViewBag.Title = "Create Household";
}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Create", "House", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Address, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rooms, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Rooms, new {@class = "form-control", @type = "number", @min = "0"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Bathrooms, new {@class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Bathrooms, new {@class = "form-control", @type = "number", @step = "any", @min = "0"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Size, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Size, new { @class = "form-control", @type = "number", @step = "any", @min = "0" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}
